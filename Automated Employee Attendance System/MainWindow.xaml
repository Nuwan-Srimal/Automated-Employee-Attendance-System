<Window x:Class="Automated_Employee_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
        mc:Ignorable="d"
        FontFamily="Microsoft Sans Serif"
        SnapsToDevicePixels="True"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{DynamicResource Background}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <StackPanel Grid.Row="0">
               

                    <StackPanel Margin="30" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                        <!-- Avatar -->
                        <Grid Width="66" Height="66">
                            <Ellipse Fill="#F2C1AE"/>
                            <Border
                Width="30"
                Height="30"
                Background="#FFFFFF"
                CornerRadius="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Text Section -->
                        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">

                            <TextBlock
                Text="Admin Portal"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{DynamicResource Forground}"/>

                            <TextBlock
                Text="Attendance System"
                FontSize="14"
                Foreground="#8A8A8A"
                Margin="0,4,0,0"/>

                        </StackPanel>

                    </StackPanel>
           

            </StackPanel>

            <StackPanel Grid.Row="1">

                <!-- Dashboard -->
                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Dashboard"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Employee -->
                <RadioButton Height="44" Width="260"
                 IsChecked="True"
                 Click="EmployeeWindow_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE77B;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Employee"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Attendance -->
                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A5;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Attendance"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Reports -->
                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE9D2;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Reports"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Settings -->
                <RadioButton Height="44" Width="260"
                 Click="Settings_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE713;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Settings"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

            </StackPanel>



            <StackPanel Height="100"  VerticalAlignment="Bottom" Grid.Row="2">
                <Line X1="0" Y1="0" X2="350" Y2="0" Stroke="Gray" StrokeThickness="0.5" />

                <Border Margin="10" Width="250" BorderBrush="#35D499" Background="#3335D499"  BorderThickness="1" CornerRadius="5">
                    <TextBlock Text="📶 Arduino Conected" FontSize="15" TextAlignment="Center" FontWeight="SemiBold" Margin="6" Foreground="#35d499"/>
                </Border>
                
                <TextBlock Text="Version 1.0.0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6,0,0" FontSize="12" Foreground="Gray"/>
                <TextBlock Text="© 2025 Automated Employee Attendance System" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
            </StackPanel>

        </Grid>

        <Grid Background="{DynamicResource ContBackground}" Grid.Column="1">
            <Border CornerRadius="20">
                <ContentControl  Margin="20" x:Name="MainContent"   Background="Transparent"  />
            </Border>
        </Grid>
        <!-- Main content area -->




        </Grid>
</Window>
